{
  "openapi": "3.0.3",
  "info": {
    "title": "API Hotel Senac",
    "version": "1.0.0",
    "description": "API RESTful para gestão de hotel (reservas, hóspedes, estadias), desenvolvida em Node.js + Express + PostgreSQL."
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Servidor local"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Usuario": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "nome": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "telefone": { "type": "string" }
        }
      },
      "UsuarioLogin": {
        "type": "object",
        "properties": {
          "email": { "type": "string", "format": "email" },
          "senha": { "type": "string" }
        },
        "required": ["email", "senha"]
      },
      "TipoQuarto": {
        "type": "object",
        "properties": {
          "tipo": { "type": "string", "example": "Duplo" },
          "capacidade": { "type": "integer", "example": 2 },
          "descricao": { "type": "string" }
        },
        "required": ["tipo", "capacidade", "descricao"]
      },
      "Quarto": {
        "type": "object",
        "properties": {
          "numero": { "type": "integer", "example": 101 },
          "tipo": { "type": "string", "example": "Duplo" },
          "valorDiaria": { "type": "number", "format": "float" },
          "status": { "type": "string", "example": "disponivel" }
        },
        "required": ["numero", "tipo", "valorDiaria", "status"]
      },
      "Hospede": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "nome": { "type": "string" },
          "cpf": { "type": "string" },
          "telefone": { "type": "string" },
          "email": { "type": "string", "format": "email" }
        },
        "required": ["nome", "cpf", "telefone", "email"]
      },
      "Reserva": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "idCliente": { "type": "integer" },
          "numeroQuarto": { "type": "integer" },
          "quantidadePessoas": { "type": "integer" },
          "dataEntrada": { "type": "string", "format": "date" },
          "dataSaida": { "type": "string", "format": "date" }
        },
        "required": [
          "idCliente",
          "numeroQuarto",
          "quantidadePessoas",
          "dataEntrada",
          "dataSaida"
        ]
      },
      "EstadiaCheckin": {
        "type": "object",
        "properties": {
          "clienteId": { "type": "integer" },
          "numeroQuarto": { "type": "integer" },
          "valorDiaria": { "type": "number", "format": "float" },
          "dataEntrada": { "type": "string", "format": "date-time" }
        },
        "required": ["clienteId", "numeroQuarto", "valorDiaria", "dataEntrada"]
      },
      "EstadiaCheckout": {
        "type": "object",
        "properties": {
          "estadiaId": { "type": "integer" },
          "dataSaida": { "type": "string", "format": "date-time" }
        },
        "required": ["estadiaId", "dataSaida"]
      },
      "Estadia": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "clienteId": { "type": "integer" },
          "numeroQuarto": { "type": "integer" },
          "valorDiaria": { "type": "number" },
          "dataEntrada": { "type": "string", "format": "date-time" },
          "dataSaida": { "type": "string", "format": "date-time", "nullable": true },
          "valorTotal": { "type": "number", "nullable": true },
          "diasCobrados": { "type": "integer", "nullable": true }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": { "type": "string" }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/api/usuarios/registrar": {
      "post": {
        "tags": ["Usuários"],
        "summary": "Registrar novo usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "allOf": [
                  { "$ref": "#/components/schemas/Usuario" },
                  {
                    "type": "object",
                    "properties": {
                      "senha": { "type": "string" }
                    },
                    "required": ["senha"]
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário registrado com sucesso"
          },
          "409": {
            "description": "E-mail já cadastrado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/api/usuarios/login": {
      "post": {
        "tags": ["Usuários"],
        "summary": "Login de usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UsuarioLogin" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login realizado com sucesso (retorna token JWT)"
          },
          "401": {
            "description": "E-mail ou senha inválidos",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/api/tipos-quarto": {
      "get": {
        "tags": ["Tipos de Quarto"],
        "summary": "Listar tipos de quarto",
        "responses": {
          "200": {
            "description": "Lista de tipos de quarto",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/TipoQuarto" }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Tipos de Quarto"],
        "summary": "Criar tipo de quarto",
        "security": [
          { "bearerAuth": [] }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/TipoQuarto" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Tipo de quarto criado"
          },
          "409": {
            "description": "Tipo de quarto já existe"
          }
        }
      }
    },
    "/api/quartos": {
      "get": {
        "tags": ["Quartos"],
        "summary": "Listar quartos",
        "security": [
          { "bearerAuth": [] }
        ],
        "responses": {
          "200": {
            "description": "Lista de quartos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Quarto" }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Quartos"],
        "summary": "Criar quarto",
        "security": [
          { "bearerAuth": [] }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Quarto" }
            }
          }
        },
        "responses": {
          "201": { "description": "Quarto criado" },
          "400": { "description": "Dados inválidos" }
        }
      }
    },
    "/api/hospedes": {
      "get": {
        "tags": ["Hóspedes"],
        "summary": "Listar hóspedes",
        "security": [
          { "bearerAuth": [] }
        ],
        "responses": {
          "200": {
            "description": "Lista de hóspedes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Hospede" }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Hóspedes"],
        "summary": "Cadastrar hóspede",
        "security": [
          { "bearerAuth": [] }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Hospede" }
            }
          }
        },
        "responses": {
          "201": { "description": "Hóspede cadastrado com sucesso" }
        }
      }
    },
    "/api/reservas": {
      "get": {
        "tags": ["Reservas"],
        "summary": "Listar reservas",
        "security": [
          { "bearerAuth": [] }
        ],
        "responses": {
          "200": {
            "description": "Lista de reservas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Reserva" }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Reservas"],
        "summary": "Criar reserva",
        "security": [
          { "bearerAuth": [] }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Reserva" }
            }
          }
        },
        "responses": {
          "201": { "description": "Reserva criada com sucesso" },
          "400": { "description": "Dados inválidos" },
          "409": { "description": "Conflito de reserva (datas ou capacidade)" }
        }
      }
    },
    "/api/estadias/checkin": {
      "post": {
        "tags": ["Estadias"],
        "summary": "Realizar check-in",
        "security": [
          { "bearerAuth": [] }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/EstadiaCheckin" }
            }
          }
        },
        "responses": {
          "201": { "description": "Check-in realizado com sucesso" },
          "400": { "description": "Dados incompletos ou inválidos" }
        }
      }
    },
    "/api/estadias/checkout": {
      "post": {
        "tags": ["Estadias"],
        "summary": "Realizar check-out",
        "security": [
          { "bearerAuth": [] }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/EstadiaCheckout" }
            }
          }
        },
        "responses": {
          "200": { "description": "Checkout realizado com sucesso" },
          "400": { "description": "Dados inválidos" }
        }
      }
    },
    "/api/relatorios/estadias": {
      "get": {
        "tags": ["Relatórios"],
        "summary": "Relatório de estadias",
        "security": [
          { "bearerAuth": [] }
        ],
        "parameters": [
          {
            "name": "clienteId",
            "in": "query",
            "schema": { "type": "integer" },
            "required": false
          },
          {
            "name": "mes",
            "in": "query",
            "schema": { "type": "integer" },
            "required": false
          },
          {
            "name": "ano",
            "in": "query",
            "schema": { "type": "integer" },
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de estadias filtradas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Estadia" }
                }
              }
            }
          }
        }
      }
    }
  }
}
